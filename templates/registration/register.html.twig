{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {% for message in app.flashes('error') %}
        <div class="flash-error">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nombres) }}
        {{ form_row(registrationForm.apellidos) }}
        {{ form_row(registrationForm.sexo, {'attr': {'required': 'required'}}) }}

        {{ form_row(registrationForm.edad) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
    }) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}

    <a href="{{ path('app_login') }}">¿Ya tienes una cuenta? Inicia sesión</a>
{% endblock %}
